@model List<Presentation.ViewBags.ProductViewBag.MainProductViewBag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Index</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürün Listesi ve İşlemleri
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Marka</th>
                                    <th scope="col">Barkodu</th>
                                    <th scope="col">Stok Adedi</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductBrand</td>
                                        <td>@item.ProductBarcode</td>
                                        <td>@item.Stock</td>
                                        <td>
                                            <a href="/Product/DeleteProduct/@item.ProductId"
                                               class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                                Sil
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Product/UpdateProduct/@item.ProductId"
                                               class="btn btn-outline-success btn-sm">
                                                Güncelle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Ürün Kaydı</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
